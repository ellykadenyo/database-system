# .env.example - copy to .env and replace values (DO NOT commit .env)
# Basic container ports (host ports can be adjusted)
COORDINATOR_PORT=5432
WORKER1_PORT=5433
WORKER2_PORT=5434
WORKER3_PORT=5435
PGPOOL_PORT=9999

METABASE_PORT=3000
GRAFANA_PORT=3001
PROMETHEUS_PORT=9090

# Pgpool admin & SR check user (required by Bitnami pgpool image)
PGPOOL_ADMIN_USERNAME=pgpool_admin
PGPOOL_ADMIN_PASSWORD=change_me_pgpool_admin_pw

# Streaming replication / health-check user for pgpool
PGPOOL_SR_CHECK_USER=pgpool_srcheck
PGPOOL_SR_CHECK_PASSWORD=change_me_pgpool_sr_pw

# Postgres common
POSTGRES_PASSWORD=change_me_postgres_admin_pw
POSTGRES_USER=postgres
POSTGRES_DB=tripdata

# Dedicated DB users (set strong values)
METABASE_DB_USER=metabase_user
METABASE_DB_PASSWORD=change_me_metabase_pw

PROM_EXPORTER_DB_USER=prometheus_exporter
PROM_EXPORTER_DB_PASSWORD=change_me_prom_pw

DATALOADER_DB_USER=dataloader
DATALOADER_DB_PASSWORD=change_me_loader_pw

PGPOOL_DB_USER=pgpool_user
PGPOOL_DB_PASSWORD=change_me_pgpool_pw

# Citus image tag (optionally change)
CITUS_IMAGE=citusdata/citus:12.2

# Metabase admin (initial UI credentials)
METABASE_ADMIN_EMAIL=admin@example.com
METABASE_ADMIN_PASSWORD=change_me_metabase_admin_pw

# Prometheus scrape interval
PROM_SCRAPE_INTERVAL=15s

# AWS / S3 for backups (if used by backup scripts)
S3_BUCKET=my-backup-bucket
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Other settings
PGDATA_DIR=/var/lib/postgresql/data